Universe   = vanilla
Executable = run_and_transfer.sh

+ProjectName="cms.org.cern"

# custom args
NEVENT = 500
NEVENTLUMIBLOCK = 100
NTHREAD = 1
PROCNAME = GluGluToBulkGravitonToHHTo4QGluLTau_MH-50-125-250-300_LowPt_narrow
COMPAIGN = Run3Summer23BPix
EOSPATH = root://eoscms.cern.ch//store/cmst3/group/vhcc/sfTuples/$(PROCNAME)/23BPixMiniAODv4/miniv4_$(Cluster)-$(Process).root

# note: use different seeds in different H->2prong and H->WW/ZZ routines to avoid overlap in LHE events
BEGINSEED = 29100000

Arguments = $(JOBNUM) $(NEVENT) $(NEVENTLUMIBLOCK) $(NTHREAD) $(PROCNAME) $(COMPAIGN) $(BEGINSEED) $(EOSPATH) $(LHEPRODSCRIPT)

#requirements = (OpSysAndVer =?= "AlmaLinux9")
#MY.WantOS = "el8"
#+DesiredOS = "EL8"
Requirements = HAS_SINGULARITY == True
+SingularityImage = "/cvmfs/unpacked.cern.ch/registry.hub.docker.com/cmssw/el8:x86_64"
request_cpus = 1
request_memory = 2000
use_x509userproxy = true

+JobFlavour = "tomorrow"

Log        = log/job.log_$(Cluster)
Output     = log/job.out_$(Cluster)-$(Process)
Error      = log/job.err_$(Cluster)-$(Process)

should_transfer_files   = YES
when_to_transfer_output = ON_EXIT_OR_EVICT
transfer_output_files   = dummy.cc

Queue JOBNUM from seq 1 2134 |
